@model RegisterViewModel
<!DOCTYPE html>
<html>
<head>
	<h1><b>Register</b></h1>
	<style>
		.button {
			background-color: #4CAF50;
			border: none;
			color: white;
			padding: 15px 32px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
			margin: 4px 2px;
			cursor: pointer;
		}

		.container {
			padding: 70px;
			max-width: 600px;
			margin: auto;
		}

		.body {
			background: #f1f2f7;
		}

		.card {
			box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
			border-radius: 10px;
			background-color: #fff;
			padding: 20px;
			margin: 20px 0;
		}

			.card h2 {
				margin-bottom: 20px;
				color: #001f3f;
				font-size: 24px;
			}

		.form-group {
			margin-bottom: 15px;
		}

			.form-group label {
				display: block;
				margin-bottom: 5px;
				color: #001f3f;
				font-weight: bold;
			}

			.form-group input,
			.form-group select {
				width: 96%;
				padding: 10px;
				border: 1px solid #ddd;
				border-radius: 5px;
			}

				.form-group input:focus,
				.form-group select:focus {
					border-color: #001f3f;
					outline: none;
				}

			.form-group .text-danger {
				color: #ff0000;
				font-size: 0.875em;
			}

		.btn-submit {
			background-color: #001f3f;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
		}

			.btn-submit:hover {
				background-color: #4580b5;
			}
	</style>
</head>

<body>
	<div class="card">
		<form asp-action="Register" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UserName"><strong>Username</strong></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password"><strong>Password</strong></label>
				<input asp-for="Password" type="password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword"><strong>Confirm Password</strong></label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ProfilePicture"><strong>Profile Picture</strong></label>
				<input asp-for="ProfilePicture" type="file" class="form-control" />
				<span asp-validation-for="ProfilePicture" class="text-danger"></span>
			</div>

			<br />
			<button class="btn-submit" type="submit>">Register</button>
		</form>
	</div>
</body>
</html>